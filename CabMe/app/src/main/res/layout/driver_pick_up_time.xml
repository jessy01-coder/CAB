<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="SET PICKUP TIME"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/title"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edPriceLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edPrice"
            android:hint="Fare"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose pick up time in 24HRS system"
        android:id="@+id/pickTimeQuestion"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edPriceLayout"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pickTimeQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtPickupTime"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Choose Time"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btnTimePicker">
    </Button>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pickTimeQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTimePicker"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/txtPickupTime"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btnTimePicker"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose pick up Date"
        android:id="@+id/pickDateQuestion"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTimePicker"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pickDateQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtPickupDate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Choose Date"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btnDatePicker">
    </Button>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pickDateQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDatePicker"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/txtPickupDate"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btnDatePicker"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/green_btn_liner_background"
        app:layout_constraintTop_toBottomOf="@id/btnDatePicker"
        android:layout_marginTop="16dp"
        android:text="CONFIRM PICK UP TIME"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/green_700"
        android:id="@+id/btnSubmit"/>
</androidx.constraintlayout.widget.ConstraintLayout>