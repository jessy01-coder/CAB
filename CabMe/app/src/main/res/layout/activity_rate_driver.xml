<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.passenger.RateDriver">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Rate Driver"
        android:id="@+id/toolbar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/driver_icon"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ratingBar"
        android:layout_margin="20dp"
        android:id="@+id/driverIcon"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/ed_background_grey"
        android:hint="Leave a comment"
        android:gravity="start"
        android:padding="12dp"
        android:inputType="text|textMultiLine"
        android:id="@+id/edComment"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="What went wrong"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:id="@+id/title"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="@color/white"
        android:id="@+id/btnSubmit"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/driverIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ratingBar"
        android:rating="2.5"
        app:layout_constraintBottom_toTopOf="@id/edComment"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:id="@+id/checkboxMusic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/checkboxWifi"
            app:layout_constraintBottom_toTopOf="@id/checkboxCab"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi Quality"
            android:id="@+id/checkboxWifi"
            app:layout_constraintBottom_toTopOf="@id/checkboxCab"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkboxMusic"
            app:layout_constraintEnd_toStartOf="@id/checkboxDriving"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driving"
            android:id="@+id/checkboxDriving"
            app:layout_constraintBottom_toTopOf="@id/checkboxCab"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkboxWifi"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behaviour"
            android:id="@+id/checkboxBehaviour"
            app:layout_constraintTop_toBottomOf="@id/checkboxWifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/checkboxCab"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cab Quality"
            android:id="@+id/checkboxCab"
            app:layout_constraintTop_toBottomOf="@id/checkboxWifi"
            app:layout_constraintStart_toEndOf="@id/checkboxBehaviour"
            app:layout_constraintEnd_toStartOf="@id/checkboxArrival"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Time"
            android:id="@+id/checkboxArrival"
            app:layout_constraintTop_toBottomOf="@id/checkboxWifi"
            app:layout_constraintStart_toEndOf="@id/checkboxCab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>