<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.passenger.PassengerRides">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="My Ride"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/cardPersonalDetails"
        android:text="PENDING..."
        android:gravity="center"
        android:textColor="@color/myAccent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/txtStatus"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cardPersonalDetails">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/driver_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="16dp"
                        android:id="@+id/image"/>
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/driverPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:id="@+id/driverName"
                        android:drawablePadding="8dp"
                        app:drawableStartCompat="@drawable/ic_account" />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/image"
                        app:layout_constraintStart_toEndOf="@id/driverName"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="..."
                        android:id="@+id/driverPhone"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="8dp"
                        android:layout_marginTop="8dp"
                        app:drawableStartCompat="@drawable/ic_call" />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/driverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:id="@+id/passengerLocation"
                        android:layout_marginTop="8dp"
                        android:text="..."
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/ic_location" />
                    <TextView
                        android:id="@+id/passengerDestinationLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="..."
                        app:drawableStartCompat="@drawable/ic_destination_location"
                        app:layout_constraintTop_toBottomOf="@id/passengerLocation" />
                    <TextView
                        android:id="@+id/passengerPickUpTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="..."
                        app:drawableStartCompat="@drawable/ic_time"
                        app:layout_constraintTop_toBottomOf="@id/passengerDestinationLocation" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DEPATURE"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:id="@+id/btnAction"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/passengerPickUpTime"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>