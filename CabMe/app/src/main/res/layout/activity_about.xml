<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.About"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:title="About App"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"/>
    <ImageView
        android:layout_width="136dp"
        android:layout_height="115dp"
        android:layout_above="@id/gas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/app_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas"
        android:text="CABME v1.0"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Experience the safe and friendly, affordable and convinient taxi services through CABME app.Let's go for miles with smiles"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        android:layout_below="@id/gas"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="http://www.cabme.com"
        android:textColor="#f4f4f4"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        />


</RelativeLayout>