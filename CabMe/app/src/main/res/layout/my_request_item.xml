<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp">
    <TextView
        android:id="@+id/txtTime"
        android:text="1500hrs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/grey_800"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtDescription"/>
    <TextView
        android:id="@+id/txtDescription"
        android:text="From Lavington to Westlands"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:gravity="top|center"
        android:textSize="10sp"
        android:padding="8dp"
        android:textColor="@color/grey_800"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/txtTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtPhone"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/txtPhone"
        android:text="0748355080"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey_800"
        app:layout_constraintStart_toEndOf="@id/txtDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAccept"/>
    <TextView
        android:id="@+id/btnAccept"
        android:text="Accept"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="13sp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/green_700"
        android:background="@drawable/green_btn_liner_background"
        app:layout_constraintStart_toEndOf="@id/txtPhone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="140dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnAccept"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:background="@color/grey_300"
        android:id="@+id/divider"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/btnDecline"
        android:text="Decline"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="13sp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/red_700"
        android:layout_marginTop="12dp"
        android:background="@drawable/red_btn_liner_background"
        app:layout_constraintStart_toEndOf="@id/txtPhone"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/btnDecline"
        android:background="@color/grey_300"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>